ServerAliveInterval 50
ServerAliveCountMax 3

# my virtual machine
# add AcceptEnv SCHSPA_* to sshd_config
Host arch
	ForwardAgent yes
	ForwardX11 yes
	ForwardX11Trusted yes
	RemoteForward 1080 localhost:1080
	HostName localhost
	User schspa
	Port 2222
	SendEnv SCHSPA_SSHFS_DIR
	SendEnv SCHSPA_SSHFS_TARGET

#Linux
Host bitbucket.org
	User git
	Port 22
	Hostname bitbucket.org
	ProxyCommand nc -x 127.0.0.1:1080 %h %p

Host github.com
	User git
	Port 22
	Hostname github.com
	ProxyCommand nc -x 127.0.0.1:1080 %h %p
